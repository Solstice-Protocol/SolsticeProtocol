# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solstice_protocol
DB_USER=solstice_user
DB_PASSWORD=solstice_dev_password

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
PROGRAM_ID=ELqNcvWpY4L5qAe7P4PuEKMo86zrouKctZF3KuSysuYY

# UIDAI Configuration
UIDAI_PUBLIC_KEY=your-uidai-public-key-here

# Encryption Keys
ENCRYPTION_KEY=your-256-bit-hex-key-here

# Logging
LOG_LEVEL=info

# Azure Managed Redis with Microsoft Entra ID Authentication
# No password needed - uses Azure Managed Identity or DefaultAzureCredential
REDIS_HOST=your-redis-name.centralindia.redis.azure.net
REDIS_PORT=10000
REDIS_USERNAME=default
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_EXPIRY=86400000

# JWT Authentication
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters-long
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
